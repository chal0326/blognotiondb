---
interface Props {
  error?: Error;
}

const { error } = Astro.props;
---

<div class="min-h-[400px] flex items-center justify-center">
  <div class="text-center">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Something went wrong</h2>
    <p class="text-gray-600 mb-6">
      {error?.message || 'An unexpected error occurred. Please try again later.'}
    </p>
    <a
      href="/"
      class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700"
    >
      Return Home
    </a>
  </div>
</div>